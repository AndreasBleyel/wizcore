<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_view_highscore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="engelbergbleyel.at.wizcore.EditPlayers"
        tools:showIn="@layout/activity_edit_players"
        android:orientation="vertical">

        <TextView
            android:text="@string/savedPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:layout_marginBottom="5dp" />

    <TextView
        android:text="@string/explEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textAlignment="center"
        android:layout_marginBottom="20dp" />

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tbl_playerListEdit"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_header"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="@string/nameScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="24sp"
                    android:textAlignment="textStart" />

                <TextView
                    android:layout_column="1"
                    android:text="@string/alltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="24sp"
                    android:textAlignment="textStart" />

                <TextView
                    android:layout_column="2"
                    android:text="@string/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textSize="24sp"
                    android:textAlignment="textStart" />
            </TableRow>
        </TableLayout>

    <Button
        android:text="@string/button_addPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addPlayerDB" />

</LinearLayout>

