<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="engelbergbleyel.at.wizcore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Bids"
            android:label="@string/title_activity_bids"
            android:parentActivityName=".Scoresheet"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Scoresheet"
            android:label="@string/title_activity_scoresheet"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditPlayers"
            android:label="@string/title_activity_edit_players"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewHighscore"
            android:label="@string/title_activity_view_highscore"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfigureGame"
            android:label="@string/title_activity_configure_game"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlayerDetail"
            android:label="@string/title_activity_player_detail"
            android:parentActivityName=".EditPlayers"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="engelbergbleyel.at.wizcore.EditPlayers" />
        </activity>
        <activity
            android:name=".StartTutorial"
            android:label="@string/title_activity_start_tutorial"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainMenu"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="engelbergbleyel.at.wizcore.MainMenu" />
        </activity>
        <activity android:name=".Launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>